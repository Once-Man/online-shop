<form action="/" method="GET">
    <select name="category" class="form-control" id="">
        <option value="all">All</option>
        <option value="clothes">Clothes</option>
        <option value="phones">Phones</option>
        <option value="computer">Computer</option>
    </select>
    <input type="submit" class="btn btn-sm btn-primary" value="Filter">
</form>

<% if(validationError) { %>
    <p class="alert alert-danger">
        <%= validationError.msg %>
    </p>
<% } %>

<div class="row">
    <% products.forEach(product => { %>
        <div class="col col-12 col-md-6 col-lg-4 col-xl-3">
            <div class="card" style="width: 18rem;">
                <img src="<%= product.image %>" alt="">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="/admin/product/<%= product._id %>"><%= product.name %></a>
                        <p>Price: <%= product.price %></p>
                    </h5>
                    <form action="/admin/cart" method="POST">
                        <input type="number" name="amount" class="form-control">
                        <input type="hidden" name="name" value="<%= product.name %>"> 
                        <input type="hidden" name="price" value="<%= product.price %>"> 
                        <input type="hidden" name="productId" value="<%= product._id %>"> 
                        <input type="hidden" name="redirectTo" value="/">
                        <input type="submit" value="Add to cart" class="btn btn-primary btn-sm">
                    </form>
                </div>
            </div>
        </div>
    <% }) %>
</div>